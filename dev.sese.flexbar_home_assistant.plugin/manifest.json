{
    "name": "HomeAssistant",
    "uuid": "dev.sese.flexbar_home_assistant",
    "version": "0.0.1",
    "author": "Sese-Schneider",
    "entry": "backend/plugin.cjs",
    "description": "Integrate HomeAssistant into your Flexbar",
    "repo": "https://github.com/Sese-Schneider/flexbar-home-assistant",
    "sdk": {
        "version": "1.0.0"
    },
    "software": {
        "minimumVersion": "1.0.0"
    },
    "os": [
        {
            "platform": "mac",
            "minimumVersion": "10.15"
        },
        {
            "platform": "windows",
            "minimumVersion": "10"
        }
    ],
    "device": [
        {
            "name": "flexbar",
            "version": "1.0.0"
        }
    ],
    "configPage": "",
    "keyLibrary": {
        "title": "$PluginName",
        "style": {
            "icon": "mdi mdi-puzzle"
        },
        "children": [
          {
              "title": "$Counter.Title",
              "tip": "$Counter.Tip",
              "cid": "dev.sese.flexbar_home_assistant.counter",
              "config": {
                  "keyType": "default",
                  "clickable": true,
                  "platform": [
                      "windows",
                      "mac"
                  ]
              },
              "style": {
                  "icon": "mdi mdi-gesture-tap-button",
                  "width": 240
              },
              "data": {
                  "rangeMin": "0",
                  "rangeMax": "100"
              }
          }
        ]
    },
    "local": {
        "en": {
            "PluginName": "HomeAssistant",
            "Counter": {
                "Title": "Tap Counter",
                "Tip": "Default keys with customizable drawable content",
                "UI": {
                    "RangeMin": "Minimum Value",
                    "RangeMax": "Maximum Value"
                }
            }
        }
    }
}
